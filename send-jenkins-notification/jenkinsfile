pipeline {
    agent any

    stages {
        stage('Check out codebase') {
            steps {
                checkout scm: [
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        credentialsId: 'github-https-token',
                        url: 'https://github.com/poonamg1524/slack-notifications.git'
                    ]]
                ]
            }
        }

        stage('Build') {
            steps {
                echo 'Building Codebase'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Test on changes'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying code'
            }
        }
    }

    post {
        always {
            sh "go run send-jenkins-notification/send-jenkins-notification.go ${BUILD_URL} ${currentBuild.currentResult} ${BUILD_NUMBER} ${JOB_NAME}"
        }
    }
}
